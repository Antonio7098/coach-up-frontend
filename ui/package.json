{
  "name": "ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:mock": "MOCK_CONVEX=1 next dev --turbopack",
    "dev:wasm": "CSS_TRANSFORMER_WASM=1 next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:e2e": "playwright test",
    "test:e2e:protected": "CLERK_PROTECT_ALL=1 playwright test tests/e2e/auth.protect.spec.ts",
    "test:e2e:real-convex": "MOCK_CONVEX=0 playwright test --project=chromium:real-convex",
    "test:e2e:headed": "playwright test --headed --project=chromium",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "postinstall": "node scripts/postinstall-lightningcss-wasm-shim.cjs",
    "smoke:skills": "node scripts/skills-smoke.mjs",
    "smoke:storage": "node scripts/storage-presign-smoke.mjs",
    "smoke:storage:download": "node scripts/storage-download-smoke.mjs",
    "s3:setup:cors": "node scripts/s3-setup-cors.mjs",
    "smoke:transcripts": "node scripts/transcripts-smoke.mjs",
    "smoke:stt": "node scripts/stt-smoke.mjs",
    "smoke:stt:multipart": "node scripts/stt-multipart-smoke.mjs",
    "smoke:tts": "node scripts/tts-smoke.mjs"
  },
  "dependencies": {
    "@aws-sdk/client-polly": "^3.873.0",
    "@aws-sdk/client-s3": "^3.873.0",
    "@aws-sdk/client-transcribe": "^3.873.0",
    "@aws-sdk/s3-request-presigner": "^3.873.0",
    "@clerk/nextjs": "^6.31.4",
    "@google-cloud/speech": "^6.7.1",
    "@google-cloud/text-to-speech": "^5.8.1",
    "convex": "^1.25.4",
    "next": "15.4.7",
    "prom-client": "^15.1.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "recharts": "^3.1.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.7",
    "lightningcss-wasm": "^1.30.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^1.6.1"
  }
}
