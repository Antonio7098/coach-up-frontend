{
  "name": "ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:wasm": "CSS_TRANSFORMER_WASM=1 next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:e2e": "playwright test",
    "test:e2e:real-convex": "MOCK_CONVEX=0 playwright test --project=chromium:real-convex",
    "test:e2e:headed": "playwright test --headed --project=chromium",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "postinstall": "node scripts/postinstall-lightningcss-wasm-shim.cjs"
  },
  "dependencies": {
    "convex": "^1.25.4",
    "next": "15.4.7",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.7",
    "lightningcss-wasm": "^1.30.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^1.6.1"
  }
}
