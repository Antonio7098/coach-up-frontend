# Coach Up Frontend (.env.example)
# Copy to .env.local and fill with real values or set in Vercel

# Clerk (Auth)
CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
# Toggle auth gating for API routes (0=disabled, 1=enabled). Recommended 0 in local dev.
CLERK_ENABLED=0

# Convex
CONVEX_DEPLOYMENT=
CONVEX_URL=

# AI Service (used by Next.js API routes)
AI_API_BASE_URL=http://127.0.0.1:8000
# Optionally expose to the client (not required for server-only routes)
NEXT_PUBLIC_AI_API_BASE_URL=

# Public config (safe to expose via NEXT_PUBLIC_*)
NEXT_PUBLIC_APP_ENV=local
NEXT_PUBLIC_ENABLE_VOICE=1
NEXT_PUBLIC_VOICE_MAX_UTTERANCE_MS=15000

# Rate limiting (optional placeholders)
RATE_LIMIT_MAX_RPS=10
RATE_LIMIT_BURST=20

# Logging
LOG_LEVEL=info

# Audio Storage (S3-compatible)
# Server-only credentials; never expose via NEXT_PUBLIC_*
STORAGE_PROVIDER=s3
S3_BUCKET_AUDIO=
S3_REGION=us-east-1
# For LocalStack/MinIO, set endpoint and force path-style addressing
S3_ENDPOINT_URL=
S3_FORCE_PATH_STYLE=1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Speech Providers (STT/TTS)
# Select providers and supply credentials for the chosen ones
# Defaults to 'mock' when unset
STT_PROVIDER=mock|openai|google
TTS_PROVIDER=mock|openai|google
# When set to 1, API routes accept a body field { "provider": "mock"|"openai" } to override per-request
ALLOW_PROVIDER_OVERRIDE=0
# Optional unified profile fallback for both STT and TTS when specific vars are unset
# Precedence: request override > STT/TTS specific > SPEECH_PROFILE > mock
SPEECH_PROFILE=mock|openai

# OpenAI (optional for STT/TTS)
OPENAI_API_KEY=
# Models (optional; defaults shown)
OPENAI_STT_MODEL=whisper-1
OPENAI_TTS_MODEL=gpt-4o-mini-tts

# Google Cloud (optional for STT and TTS)
# Use Application Default Credentials (ADC). For local dev, set GOOGLE_APPLICATION_CREDENTIALS
# to a JSON key file path. Project can be inferred from the key.
GOOGLE_APPLICATION_CREDENTIALS=
GOOGLE_CLOUD_PROJECT=
# STT language (fallback when request does not include languageHint)
GOOGLE_SPEECH_LANGUAGE=en-US
# TTS language and voice (see voices list in GCP docs)
GOOGLE_TTS_LANGUAGE=en-US
GOOGLE_TTS_VOICE=

# Azure Speech (optional)
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=

# ElevenLabs (optional for TTS)
ELEVENLABS_API_KEY=
TTS_VOICE_ID=
TTS_FORMAT=audio/mpeg

# STT limits (bytes). Default 25MB if unset.
STT_MAX_AUDIO_BYTES=26214400

# Voice Guardrails (client/server enforcement)
VOICE_MAX_UTTERANCE_MS=15000
